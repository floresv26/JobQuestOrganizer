<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactAddFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:windowSoftInputMode="stateVisible|adjustResize">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:paddingBottom="50dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv1_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/person"
                        android:layout_centerVertical="true"/>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/contact_first_name_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv1_contact"
                        android:layout_marginStart="16dp">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/contact_first_name"
                            android:layout_width="250dp"
                            android:layout_height="48dp"
                            android:hint="First Name"
                            android:textSize="16sp"
                            android:inputType="textCapWords"
                            android:textColor="@color/mediumGray"
                            android:layout_marginBottom="16dp" />
                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv2_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/person"
                        android:layout_centerVertical="true"
                        android:visibility="invisible"/>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/contact_last_name_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv2_contact"
                        android:layout_marginStart="16dp">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/contact_last_name"
                            android:layout_width="250dp"
                            android:layout_height="48dp"
                            android:hint="Last Name"
                            android:inputType="textCapWords"
                            android:textSize="16sp"
                            android:textColor="@color/mediumGray"
                            android:layout_marginBottom="16dp" />
                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv3_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/email"
                        android:layout_centerVertical="true"/>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/contact_email_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv3_contact"
                        android:layout_marginStart="16dp">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/contact_email"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:hint="Email"
                            android:textSize="16sp"
                            android:inputType="textWebEmailAddress"
                            android:textColor="@color/mediumGray"
                            android:layout_marginBottom="16dp"/>
                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv4_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/phone"
                        android:layout_centerVertical="true"/>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/contact_phone_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv4_contact"
                        android:layout_marginStart="16dp">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/contact_phone"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:hint="Phone"
                            android:textSize="16sp"
                            android:inputType="phone"
                            android:textColor="@color/mediumGray"
                            android:layout_marginBottom="16dp"/>
                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv5_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/building"
                        android:layout_centerVertical="true"/>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/contact_company_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv5_company"
                        android:layout_marginStart="16dp">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/contact_company"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:hint="Company Name"
                            android:inputType="textCapWords"
                            android:textColor="@color/mediumGray"
                            android:layout_marginBottom="16dp"/>
                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv6_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/email"
                        android:layout_centerVertical="true"
                        android:visibility="invisible"/>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/contact_linkedIn_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv6_contact"
                        android:layout_marginStart="16dp">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/contact_linkedIn"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:hint="LinkedIn"
                            android:textSize="16sp"
                            android:inputType="textWebEditText"
                            android:textColor="@color/mediumGray"
                            android:layout_marginBottom="16dp"/>
                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/cancel_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:clickable="true"
                        android:layout_centerVertical="true"/>

                    <Button
                        android:id="@+id/save_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:layout_toRightOf="@id/cancel_button"
                        android:layout_marginLeft="50dp"
                        android:background="@color/colorAccent"
                        android:textColor="@color/white"/>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</FrameLayout>
