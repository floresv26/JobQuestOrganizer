<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompanyUpdateFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:paddingBottom="100dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv1_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/building"
                    android:layout_centerVertical="true"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/company_companyName_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv1_company">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/company_companyName"
                        android:layout_width="250dp"
                        android:layout_height="48dp"
                        android:hint="Company Name"
                        android:textSize="16sp"
                        android:inputType="textCapWords"
                        android:textColor="@color/mediumGray"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp" />
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv2_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/web"
                    android:layout_centerVertical="true" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/company_website_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv2_company">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/company_website"
                        android:layout_width="250dp"
                        android:layout_height="48dp"
                        android:hint="Website"
                        android:inputType="textWebEditText"
                        android:textSize="16sp"
                        android:textColor="@color/mediumGray"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp" />
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv3_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/location"
                    android:layout_centerVertical="true"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/company_address1_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv3_company">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/company_address1"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:hint="Address 1"
                        android:textSize="16sp"
                        android:inputType="textPostalAddress"
                        android:textColor="@color/mediumGray"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp"/>
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv4_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/location"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/company_address2_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv4_company">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/company_address2"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:hint="Address 2"
                        android:textSize="16sp"
                        android:inputType="textPostalAddress"
                        android:textColor="@color/mediumGray"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp"/>
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv5_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/location"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/company_city_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv5_company">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/company_city"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:hint="City"
                        android:inputType="textPostalAddress"
                        android:textColor="@color/mediumGray"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp"/>
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv6_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/location"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/company_state_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv6_company">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/company_state"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:hint="State"
                        android:textSize="16sp"
                        android:inputType="textPostalAddress"
                        android:textColor="@color/mediumGray"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp"/>
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv7_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/location"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/company_zip_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv7_company">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/company_zip"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:hint="Zip"
                        android:textSize="16sp"
                        android:inputType="number"
                        android:textColor="@color/mediumGray"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp"/>
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv8_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/phone"
                    android:layout_centerVertical="true" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/company_phone_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv8_company">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/company_phone"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:textSize="16sp"
                        android:hint="Phone"
                        android:textColor="@color/mediumGray"
                        android:focusableInTouchMode="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp"/>
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:clickable="true"
                    android:layout_centerVertical="true"/>

                <Button
                    android:id="@+id/save_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:layout_toRightOf="@id/cancel_button"
                    android:layout_marginLeft="50dp"
                    android:background="@color/colorAccent"
                    android:textColor="@color/white"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>



</FrameLayout>
