<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.floresmurillo.jobquestorganizernavigation.ApplicationAddFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:windowSoftInputMode="stateVisible|adjustResize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:paddingBottom="50dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv1_application"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/building"
                    android:layout_centerVertical="true"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/application_companyName_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv1_application">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/application_companyName"
                        android:layout_width="250dp"
                        android:layout_height="48dp"
                        android:hint="Company Name"
                        android:textSize="16sp"
                        android:inputType="textCapWords"
                        android:textColor="@color/mediumGray"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp" />
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv2_application"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/building"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/application_jobId_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv2_application">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/application_jobId"
                        android:layout_width="250dp"
                        android:layout_height="48dp"
                        android:hint="Job Id"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:textColor="@color/mediumGray"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp" />
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv6_application"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/building"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/application_jobTitle_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv6_application">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/application_jobTitle"
                        android:layout_width="250dp"
                        android:layout_height="48dp"
                        android:hint="Job Title"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:textColor="@color/mediumGray"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp" />
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv3_application"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/event"
                    android:layout_centerVertical="true"/>

                <RelativeLayout
                    android:layout_width="250dp"
                    android:layout_height="75dp"
                    android:layout_toRightOf="@id/iv3_application">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/application_dateApplied_month_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/application_dateApplied_month"
                            android:layout_width="60dp"
                            android:layout_height="48dp"
                            android:hint="Month"
                            android:inputType="date"
                            android:textSize="16sp"
                            android:textColor="@color/mediumGray"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="16dp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/application_dateApplied_day_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/application_dateApplied_month_input">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/application_dateApplied_day"
                            android:layout_width="60dp"
                            android:layout_height="48dp"
                            android:hint="Day"
                            android:inputType="date"
                            android:textSize="16sp"
                            android:textColor="@color/mediumGray"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="16dp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/application_dateApplied_year_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/application_dateApplied_day_input">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/application_dateApplied_year"
                            android:layout_width="60dp"
                            android:layout_height="48dp"
                            android:hint="Year"
                            android:inputType="date"
                            android:textSize="16sp"
                            android:textColor="@color/mediumGray"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="16dp" />
                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/iv4_application"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/event"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"/>

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_toRightOf="@+id/iv4_application">

                    <TextView
                        android:id="@+id/application_interview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Interview"
                        android:textSize="17sp"
                        android:textColor="@color/mediumGray"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"/>

                    <CheckBox
                        android:id="@+id/application_interview_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/application_interview"
                        android:layout_marginLeft="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv5_application"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/building"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/application_jobDescription_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv5_application">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/application_jobDescription"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:hint="Job Description"
                        android:inputType="textMultiLine"
                        android:maxLines="4"
                        android:textColor="@color/mediumGray"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp"/>
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:clickable="true"
                    android:layout_centerVertical="true"/>

                <Button
                    android:id="@+id/save_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:layout_toRightOf="@id/cancel_button"
                    android:layout_marginLeft="50dp"
                    android:background="@color/colorAccent"
                    android:textColor="@color/white"/>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
